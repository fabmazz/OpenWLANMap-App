<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--border color and width-->
    <stroke
        android:width="5dp"
        android:color="@color/colorPrimaryDark" />
    <!--background color-->
    <solid android:color="#ffffff" />
    <padding
        android:left="7dp"
        android:top="7dp"
        android:right="7dp"
        android:bottom="0dp" />
    <!--make corner rounded-->
    <corners android:radius="4dp" />
</shape>
